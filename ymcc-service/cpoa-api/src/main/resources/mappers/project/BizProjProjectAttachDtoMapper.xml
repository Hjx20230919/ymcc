<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.cnpc.cpoa.mapper.project.BizProjProjectAttachDtoMapper">
  <resultMap id="BaseResultMap" type="cn.com.cnpc.cpoa.domain.project.BizProjProjectAttachDto">
    <result column="ID" jdbcType="VARCHAR" property="id" />
    <result column="PROJ_ID" jdbcType="VARCHAR" property="projId" />
    <result column="ATTACH_ID" jdbcType="VARCHAR" property="attachId" />
  </resultMap>

    <!--查询附件-->
    <select id="selectProjProjectAttachDto" parameterType="java.util.Map" resultMap="BaseResultMap">
        SELECT *  FROM T_PROJ_PROJECT_ATTACH TPPA

        <where>
          <if test="projId!=null and projId!=''">
              and TPPA.PROJ_ID=#{projId}
          </if>

        </where>
    </select>




</mapper>