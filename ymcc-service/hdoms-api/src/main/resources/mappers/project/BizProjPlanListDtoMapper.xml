<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.cnpc.cpoa.mapper.project.BizProjPlanListDtoMapper">
    <resultMap id="BaseResultMap" type="cn.com.cnpc.cpoa.domain.project.BizProjPlanListDto">
        <result column="PLAN_LIST_ID" jdbcType="VARCHAR" property="planListId"/>
        <result column="PLAN_ID" jdbcType="VARCHAR" property="planId"/>
        <result column="DEAL_NAME" jdbcType="VARCHAR" property="dealName"/>
        <result column="SERVICE_CONTEXT" jdbcType="VARCHAR" property="serviceContext"/>
        <result column="BILL_CONTEXT" jdbcType="VARCHAR" property="billContext"/>
        <result column="VALUATION_CONTEXT" jdbcType="VARCHAR" property="valuationContext"/>
        <result column="EST_UNIT_PRICE" jdbcType="DECIMAL" property="estUnitPrice"/>
        <result column="EST_TOTAL_PRICE" jdbcType="DECIMAL" property="estTotalPrice"/>
        <result column="SERVICE_PLACE" jdbcType="VARCHAR" property="servicePlace"/>
        <result column="RECOM_CONT_REASON" jdbcType="VARCHAR" property="recomContReason"/>
        <result column="SEL_CONT_TYPE" jdbcType="VARCHAR" property="selContType"/>
        <result column="PAY_TYPE" jdbcType="VARCHAR" property="payType"/>
        <result column="PLAN_SOURCE" jdbcType="VARCHAR" property="planSource"/>
        <result column="NOTES" jdbcType="VARCHAR" property="notes"/>
        <result column="PLAN_LIST_NO" jdbcType="INTEGER" property="planListNo"/>
        <result column="COUNT" jdbcType="FLOAT" property="count"/>
    </resultMap>

    <!--根据panid查询实体-->
    <select id="selectPlanList" parameterType="java.util.Map" resultMap="BaseResultMap">
        SELECT * FROM T_PROJ_PLAN_LIST
        <where>
            <if test="planId!=null and planId!=''">
                and PLAN_ID =#{planId}
            </if>
        </where>
        ORDER BY PLAN_LIST_NO
    </select>


</mapper>